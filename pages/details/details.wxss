/* pages/details/details.wxss */

.nbNumber{
  display: inline-block;
  width:30px; 
  position: absolute;
  bottom:5%;
  right:5%;
  color: #fff;
  font-size: 13px;
  background: rgba(0,0,0,0.8);
}
.title{
  margin: 5px 0;
  text-align: center;
}
.title view{
  font-size: 18px;
  font-weight: 700;
}
.title text{
  display: inline-block;
  color: #ccc;
}
.map{
  margin: 5px 0;
}
.map map{
  width: 100%;
  height: 200px;
}
.ititle{
  padding: 10px;
  border-bottom: 1px solid #e0e0e0;
  margin-bottom: 3px;
  color: #ccc;
}
.imgs image{
  width: 70px;
  height: 50px;
}
.pinglun{
  display: flex;
  width: 100%;
  margin: 5px 0;
  border-bottom: 1px solid #ccc;
}
.plleft image{
  width: 30px;
  height: 30px;
}
.plleft{
  width: 20%;
  text-align: center;
  border-right:1px solid #ccc; 
}
.plleft view{
  font-size: 12px;
}
.plright{
  padding-left:10px; 
  font-size: 13px;

}
.gn{
  position: fixed;
  bottom: 5px;
  text-align: center;
  width: 100%;
  border-radius: 5px;
  background: #fff;
  color: #ccc;
}
.gn button{
  display: inline-block;
  width: 30%;
  font-size:15px; 
  margin:5px ;
  color: red;
}
textarea{
  height: 100px;
  margin: 5px auto;
  padding: 5px;
  width: 90%;
  border:1px solid #ccc; 
  text-align: left;
  position: relative;
}
.pinglunk{
  background: #fff;
  width: 100%;
  text-align: center;
  margin-top:10px; 
}
.pinglunk button{
  display: inline-block;
  width: 30%;
  font-size: 12px;
  margin:0 30px;
}
.pinglunk view{
  text-align: right;
  font-size: 13px;
  margin: 0 10px 5px 0;
}
.pltitle{
  display: inline-block;
  margin: 10px 0;
}
.xqtitle view,text{
  font-size: 13px;
  margin: 5px;
}
.pltime{
  font-size:12px;
  color:#ccc;
  text-align: right;
  margin: 5px 0;
}
.list{
  position: relative;
  margin: 5px;
  border-bottom:1px solid #e0e0e0; 
}
.listImg{
  display: inline-block;
  width: 30%;
}
.listImg image{
  width: 90px;
  height: 70px;
}
.listtbl{
  display: inline-block;
  float:right;
  position: absolute;
  top: 25%;
  right: 0;  
}
.listtbl image{
  width: 30px;
  height: 30px;
}
.listData{
  display: inline-block;
  position: absolute;
  width: 65%;
  margin:5px 0 5px 5px; 
}
.lsdtitle{
  font-size: 16px;
  font-weight: 700;
  color: black;
}
.lsdtbl{
  font-size:14px; 
  margin-top:5px; 
  color: #ccc;
}
.lsdadd{
  font-size:12px; 
  margin-top:3px; 
  color: #ccc;
}
.bjs{
  z-index: 10000;
  position: fixed;
  top:0px;
  background: rgba(204, 204, 204,0.8);
  height: 800px;
  width: 100%;
}
.dizhi{
  height: 30px;
  margin: 10px;
