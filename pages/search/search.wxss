/* pages/search/search.wxss */
.img image{
  width:100%;
  height:200px;
  text-align: center;
}
.img{
  position: relative;
}
/* 搜索框 */
.search{
  position: absolute;
  bottom: 30px;
  margin:auto;
  left:0;
  right:0;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:80%;
  height:60rpx;
  background-color:#e0e0e0;
  border:1rpx solid whitesmoke;
  border-radius: 5px;  
  padding: 0 20px;
}
/* 搜索框提示文字样式 */
.search input{
  font-size:13px;
  font-family: "楷体";
}

/* 搜索框小图标 */
.search ico{ 
  size:20px;
}
.list{
  position: relative;
  margin: 5px;
  border-bottom:1px solid #e0e0e0; 
}
.listImg{
  display: inline-block;
  width: 30%;
}
.listImg image{
  width: 90px;
  height: 70px;
}
.listtbl{
  display: inline-block;
  float:right;
  position: absolute;
  top: 25%;
  right: 0;  
}
.listtbl image{
  width: 30px;
  height: 30px;
}
.listData{
  display: inline-block;
  position: absolute;
  width: 65%;
  margin:5px 0 5px 5px; 
}
.lsdtitle{
  font-size: 16px;
  font-weight: 700;
  color: black;
}
.lsdtbl{
  font-size:14px; 
  margin-top:5px; 
  color: #ccc;
}
.lsdadd{
  font-size:12px; 
  margin-top:8px; 
  color: #ccc;
}
.ititle{
  padding: 10px;
  border-bottom: 1px solid #e0e0e0;
  margin-bottom: 3px;
}